{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "headers": [ {
      "source": "**/*.@(png|jpg|jpeg|gif|webp|json)",
      "headers": [
         {
           "key": "Access-Control-Allow-Origin",
            "value": "*"
          } ]
    } ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
